<% provide(:title, "Home") %>
<% if logged_in? %>
<div class="row">
	<aside class="tags-cloud glassy-bg" style="margin-left: 75%">
		<h3 style="color: white;">Tags Cloud</h3>
		<% tag_cloud Tag.counts, %w{css1 css2 css3 css4} do |tag, css_class| %>
		<%= link_to tag.name, tag_path(tag.name), class: css_class %>
		<% end %>
	</aside>
	<aside class="col-md-5 col-md-offset-3" style="margin-left: 30%" >
		<div class="homepost">
			<h4 style ="color:white;font-weight: bold;text-align:center;border-radius:6px;background-color:#1e87f0;padding :10px 10px 10px 10px ;">Tell a story</h4>
			<section class="post_form">
				<%= render 'shared/post_form' %>
			</section>
		</div>
	</aside>
</div>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h3 id ="homeh">Post Feed</h3>
		<%= render 'shared/feed' %>
	</div>
</div>
<% else %>

<div style="background:transparent !important" class="center jumbotron">
	<h1 id="h1home">Welcome to Pets World</h1>
	<%= link_to "Login", login_path, class: "btn btn-lg btn-primary"  %>
	<%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary"  %>
</div>
<%#= link_to image_tag("rails.png", alt: "Rails logo"),
'http://rubyonrails.org/' %>
<% end %>