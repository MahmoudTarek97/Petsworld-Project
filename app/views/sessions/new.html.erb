<% provide(:title, "Log in") %>
<h1 class ="h1lgnsgn" style="padding-bottom: 10px;padding-right: 15px;">Log in</h1>
<div class="row" >
<div class="col-md-4 col-md-offset-4">
<div  class="new_user">
<%= form_for(:session, url: login_path) do |f|  %>
<%= f.label :user_name ,class: 'formlabel' %>
<%= f.text_field :user_name, class: 'form-control' %>
<%= f.label :password ,class: 'formlabel'%>
<%= f.password_field :password, class: 'form-control' %>
<%= f.submit "Log in", class: "btn btn-primary" %>
<% end %>
</div>
<p class="psgn"">New user? <%= link_to "Sign up now!", signup_path , class:"lgnsgnlink" %></p>
</div>
</div>