<% provide(:title, @title) %>
<div class="row">
	<aside class="col-md-4 ">
	<div class="account_post">
			<section class="user_info" style ="padding-bottom: 20px;">
				<h1 style ="display: inline ; margin-bottom: "><%= @user.user_name %></h1>
				<br>
				<br>
				<span class="phome" style="text-align: center" ><%= link_to "view my profile", @user %></span>
				<br>
				<span class="phome" style="text-align: center ;color:#424242"><b>posts:</b> <%= @user.posts.count %></span>
			</section>
			<section class="stats">
				<%= render 'shared/stats' %>
				<% if @users.any? %>
				<div class="user_avatars">
					<% @users.each do |user| %>
  <%=   image_tag user.picture.thumb.url if user.picture?  %>
					<% end %>
				</div>
				<% end %>
			</section>
		</div>
	</aside>
	<div class="col-md-8">
		<h3><%= @title %></h3>
		<% if @users.any? %>
		<ul class="users follow">
			<%= render @users %>
		</ul>
		<%= will_paginate %>
		<% end %>
	</div>
</div>
