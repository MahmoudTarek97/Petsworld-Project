<% provide(:title, @user.user_name) %>
<div class="row">
	<aside class="col-md-4">
		<div>
			<div class="homepost" >
				<section class="user_info"  >
					<div >
						<h1 >
							<%=  image_tag @user.picture.thumb.url if @user.picture? %>			
							<%= @user.user_name %>
						</h1>
					</div>
					<br>
					<div style="padding-top: 5px; ">
						<% if @user.animalname.blank?  && @user.animaltype.blank?  && @user.animalgender.blank? %>
						<p class="phome"><%= link_to "add your Pet info !", edit_user_path(current_user) %></span> </p>
						<% else %> 
						<% unless @user.animalname.blank? %>
						<p class="phome">Pet name : <span style="display: inline;color:#000;"><%= @user.animalname %></span> </p>
						<%end %>
						<% unless @user.animaltype.blank? %>
						<p class="phome">Pet type : <span style="display: inline;color:#000;"><%= @user.animaltype %> </span></p>
						<%end%>
						<% unless @user.animalgender.blank? %>
						<p class="phome">Pet gender : <span style="display: inline;color:#000;"><%= @user.animalgender %></span> </p>
						<%end%>
						<%end%>

					</div>

				</section>
				<section class="stats" >
					<%= render 'shared/stats' %>
				</section>
			</div>
		</div>
	</aside>
	<div class="col-md-8">
		<%= render 'follow_form' if logged_in? %>
		<% if @user.posts.any? %>
		<h3>posts (<%= @user.posts.count %>)</h3>
		<ol class="posts">
			<%= render @posts %>
		</ol>
		<%= will_paginate @posts %>
		<% end %>
	</div>
</div>