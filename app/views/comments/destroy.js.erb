<% if(@comment.commentable_type == "Post") %>
	$('.delete_comment').bind('ajax:success', function() {
		$(this).closest('div').fadeOut();
		$('#comments_counter').html('Comments (<%= @commentable.comments(:reload).count %>)');
	});
<% elsif (@comment.commentable_type == "Comment")%>
	$('.delete_comment').bind('ajax:success', function() {
		$(this).closest('div').fadeOut();
		$('#replies_counter').html('Replies (<%= @commentable.comments(:reload).count %>)');
	});
<% end %>